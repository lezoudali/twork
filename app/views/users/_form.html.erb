<div class="form-group">
  <%= f.label :first_name, "First Name *" %>
  <%= f.text_field :first_name, class: 'form-control', placeholder: "Name" %>
</div>

<div class="form-group">
  <%= f.label :last_name, "Last Name *" %>
  <%= f.text_field :last_name, class: 'form-control', placeholder: "Name" %>
</div>    

<div class="form-group">
  <%= f.label :email, "Email *" %>
  <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
</div>

<div class="form-group">
  <%= f.label :bio %>
  <%= f.text_area :bio, class: 'form-control', placeholder: "Bio" %>
</div>

<div class="form-group">
  <%= label_tag :new_skills, "Skills" %>
  <%= text_field_tag :new_skills,"",  class: "form-control", placeholder: "Separate by commas" %>
</div>

<div class="form-group">
  <%= f.label :image, "Profile Picture" %>
  <%= f.file_field :image, placeholder: "Image" %>
</div>

<%= f.hidden_field :uid, value: @user.uid %>
<%= f.hidden_field :twitter_handle, value: @user.twitter_handle %>

<%= f.submit class: 'form-control btn btn-primary' %>




