  <% if @user.errors.any? %>
    <div id="error_explanation" class= "alert alert-danger alert-dismissable">
      <button class="alert close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <p><%= pluralize(@user.errors.count, "error") %> prohibited this author from being saved:</p>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
