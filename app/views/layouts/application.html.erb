  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>
<%= render 'layouts/header' %>

<div class="container">
<% flash.each do |key, value| %>
  <button class="alert close" data-dismiss="alert" aria-hidden="true">Ã—</button>
  <div class="text-center <%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>
</div>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
