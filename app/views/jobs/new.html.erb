<div class="col col-md-6 col-md-offset-3">
  <h1 class="main-color">Create Job</h1>

  <%= form_for @job do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :skills %>
      <%= f.select :skill_ids, Skill.all.collect {|s| [s.name.downcase, s.id]}.sort, {}, { multiple: true, class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= label_tag :new_skills, "New Skills" %>
      <%= text_field_tag :new_skills,"",  class: "form-control", placeholder: "Separate by commas" %>
    </div>

    <%= f.submit "Create Job", class: "btn btn-primary form-control" %>

  <% end %>
</div>